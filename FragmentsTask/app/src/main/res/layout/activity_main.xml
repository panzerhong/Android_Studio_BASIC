<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sambovisal.fragmentstask.MainActivity">

    <fragment
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:id="@+id/sidebar"
        android:name="com.example.sambovisal.fragmentstask.SideBar"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_toEndOf="@+id/sidebar"
        android:id="@+id/content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:name="com.example.sambovisal.fragmentstask.ContentFragment"/>

</RelativeLayout>
