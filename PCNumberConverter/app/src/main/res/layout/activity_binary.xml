<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yinma.pcnumberconverter.Binary">


    <EditText
        android:id="@+id/idbinaryinput"
        android:hint="Enter Binary Number"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <Button
        android:onClick="calOnclick"
        android:id="@+id/cal001"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Calculate"
        app:layout_constraintTop_toBottomOf="@+id/hexa001"
        tools:layout_editor_absoluteX="8dp" />


    <TextView
        android:id="@+id/decimal001"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Decimal Number"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idbinaryinput"/>


    <TextView
        android:id="@+id/octal001"
        android:layout_width="368dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:text="Octal Number"
        app:layout_constraintTop_toBottomOf="@+id/decimal001"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/hexa001"
        android:layout_width="368dp"
        android:layout_height="120dp"
        android:text="Hexadecimal Number"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/octal001" />




</android.support.constraint.ConstraintLayout>
